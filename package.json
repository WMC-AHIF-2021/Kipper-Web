{
  "name": "kipperweb",
  "version": "0.0.1",
  "description": "The website for the Kipper programming lang",
  "keywords": [
    "Website",
    "Programming-Language",
    "Documentation"
  ],
  "license": "GPL-3.0",
  "author": "Luna Klatzer & Maxmilian Seebacher",
  "engines": {
    "node": ">= 14.0.0"
  },
  "scripts": {
    "prebuild": "npm run tslint",
    "build": "parcel build src/index.html",
    "start": "npm run build && npm run dev",
    "lint": "npm run tslint && npm run prettier",
    "lint:fix": "npm run tslint:fix && npm run prettier",
    "prettier": "prettier --write ./src/",
    "tslint": "eslint src/js/**/*.ts",
    "tslint:fix": "npm run lint -- --fix",
    "test": "ts-mocha -p tsconfig.json --recursive src/js/tests/**/*.ts",
    "posttest": "npm run lint & npm run prettier",
    "dev": "parcel src/index.html --open"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.0.0-rc.0",
    "@parcel/transformer-image": "^2.0.0-rc.0",
    "@parcel/transformer-webmanifest": "^2.0.0-rc.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "json-schema": "^0.4.0",
    "mocha": "^8.0.0",
    "parcel": "^2.0.0-rc.0",
    "prettier": "^2.4.1",
    "set-value": "^4.1.0",
    "ts-mocha": "^8.0.0",
    "ts-node": "^3.3.0",
    "tslib": "^2.0.0",
    "typescript": "^4.4.3"
  }
}
